{% extends 'base.html.twig' %}

{% block description 'Classroom information.' %}

{% block title 'Classroom information' %}

{% block body %}
    <section>
        <div class="container jumbotron">
            <div class="row">
                <div class="col">
                    <h1>Classroom informations</h1>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Name</th>
                            <td>{{ classroom.name }}</td>
                        </tr>
                        <tr>
                            <th>Grade</th>
                            <td>{{ classroom.grade }}</td>
                        </tr>
                        <tr>
                            <th>Id</th>
                            <td>{{ classroom.id }}</td>
                        </tr>
                        <tr>
                            <th>Uuid</th>
                            <td>{{ classroom.uuid }}</td>
                        </tr>
                        <tr>
                            <th>CreatedAt</th>
                            <td>{{ classroom.createdAt ? classroom.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>UpdatedAt</th>
                            <td>{{ classroom.updatedAt ? classroom.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('app_classroom_index') }}">back to list</a>

                    <a href="{{ path('app_classroom_edit', {'uuid': classroom.uuid}) }}">edit</a>

                    {{ include('classroom/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
