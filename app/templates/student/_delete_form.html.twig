<form method="post" action="{{ path('app_student_delete', {'uuid': student.uuid }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ student.uuid) }}">
    <button class="btn btn-sm btn-danger">Delete</button>
</form>
