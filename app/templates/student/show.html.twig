{% extends 'base.html.twig' %}

{% block description 'Student profile.' %}

{% block title 'Student profile' %}

{% block body %}
    <section>
        <div class="container jumbotron">
            <div class="row">
                <div class="col">
                    <h1>Student profile</h1>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>FirstName</th>
                            <td>{{ student.firstName }}</td>
                        </tr>
                        <tr>
                            <th>LastName</th>
                            <td>{{ student.lastName }}</td>
                        </tr>
                        <tr>
                            <th>BirthDate</th>
                            <td>{{ student.birthDate ? student.birthDate|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Gender</th>
                            <td>{{ student.gender ? 'Yes' : 'No' }}</td>
                        </tr>
                        <tr>
                            <th>FirstMark</th>
                            <td>{{ student.firstMark }}</td>
                        </tr>
                        <tr>
                            <th>SecondMark</th>
                            <td>{{ student.secondMark }}</td>
                        </tr>
                        <tr>
                            <th>Id</th>
                            <td>{{ student.id }}</td>
                        </tr>
                        <tr>
                            <th>Uuid</th>
                            <td>{{ student.uuid }}</td>
                        </tr>
                        <tr>
                            <th>CreatedAt</th>
                            <td>{{ student.createdAt ? student.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>UpdatedAt</th>
                            <td>{{ student.updatedAt ? student.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('app_student_index') }}">back to list</a>

                    <a href="{{ path('app_student_edit', {'uuid': student.uuid}) }}">edit</a>

                    {{ include('student/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
